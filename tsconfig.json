{
    "compilerOptions": {
        "module": "commonjs",
 
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "sourceMap": false,
        "strict": true,
        "esModuleInterop": true,


        "outDir": "lib",
 
        "target": "es2018",


        // types option has been previously configured
        "types": [
            // add node as an option
            "node"
        ],
       
        // typeRoots option has been previously configured
        "typeRoots": [
            // add path to @types
            "node_modules/@types"
        ]    
    },
    "compileOnSave": true,
    "include": [
        "src"
    ]
}