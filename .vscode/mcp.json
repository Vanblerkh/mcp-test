{
  "servers": {
    "mysql": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@benborla29/mcp-server-mysql"],
      "env": {
        "MYSQL_HOST": "127.0.0.1",
        "MYSQL_PORT": "3306",
        "MYSQL_USER": "root",
        "MYSQL_PASS": "${input:mysql-password}",
        "MYSQL_DB": "mcp_test",
        "ALLOW_INSERT_OPERATION": "true",
        "ALLOW_UPDATE_OPERATION": "true",
        "ALLOW_DELETE_OPERATION": "true",
        "SCHEMA_DDL_PERMISSIONS": "mcp_test:true"
      }
    },
    "github": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-github"],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${input:github-token}"
      }
    }
  },
  "inputs": [
    {
      "type": "promptString",
      "id": "mysql-password",
      "description": "Enter MySQL Password",
      "password": true
    },
    {
      "type": "promptString",
      "id": "github-token",
      "description": "Enter GitHub Personal Access Token",
      "password": true
    }
  ]
}