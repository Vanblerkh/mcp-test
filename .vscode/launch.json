    "version": "0.2.0",
    "configurations": [

        {
           "type": "node",
           "request": "launch",
           "name": "LOCAL",
           "cwd": "${workspaceFolder}",
           "preLaunchTask": "Run Program for Debug",
           "outFiles": [
               "${workspaceFolder}/lib/**/*.js"
           ],
           "skipFiles": [
               "<node_internals>/**"
           ],
           "console": "integratedTerminal",
           "program": "${workspaceFolder}/lib/index.js",
           "args": [],
           "env": {
               "WORKING_DIR": "./tmp",
               "DB_SECRETS_PATH": "${env:SECRETSPATH}/test",
               "DB_CONNECTION_LIMIT": "10",
               "PORT": "3000"
           }
       }

    ]
}